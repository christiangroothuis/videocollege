{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "esnext",
        "strictNullChecks": true,
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ],
            "@components": [
                "components/*"
            ],
            "@utils": [
                "utils/*"
            ],
            "@pages": [
                "pages/*"
            ],
            "@interfaces": [
                "interfaces/*"
            ],
            "@assets": [
                "assets/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}
